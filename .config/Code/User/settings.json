{
  // General Settings
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "explorer.confirmDragAndDrop": false,
  "update.mode": "none",
  //   "files.autoSave": "afterDelay",
  //   "files.autoSaveDelay": 1000,

  // Appearance Settings
  "window.titleBarStyle": "custom",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  //   "editor.bracketPairColorization.enabled": true,
  //   "editor.guides.bracketPairs": true,

  // Editor Settings
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.fontSize": 15,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  "editor.cursorSurroundingLines": 10,
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 100,
  "editor.largeFileOptimizations": true,
  "editor.snippetSuggestions": "top",

  // Terminal Settings
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.external.linuxExec": "/usr/bin/kitty",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "block",

  // Custom Colors
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1F1F1F",
    "breadcrumb.background": "#181818",
    "breadcrumb.foreground": "#44cfff",
    "sideBar.background": "#1F1F1F",
    "sideBarSectionHeader.background": "#1F1F1F",
    "editor.background": "#181818",
    "editorLineNumber.foreground": "#88888F",
    "editorLineNumber.activeForeground": "#BFBFCB",
    "editor.lineHighlightBackground": "#222224",
    "editor.lineHighlightBorder": "#282830",
    "editor.selectionBackground": "#44aacc66",
    "editor.selectionHighlightBackground": "#3399cc66",
    "editorGroupHeader.tabsBackground": "#1F1F1F",
    "list.activeSelectionBackground": "#00ccff2a",
    "list.inactiveSelectionBackground": "#212122",
    "tab.activeBackground": "#10252F",
    "tab.activeBorderTop": "#00BBDDaa",
    "tab.inactiveBackground": "#1F1F1F",
    "statusBar.background": "#1F1F1F",
    "statusBar.foreground": "#3CF",
    "statusBarItem.errorForeground": "#ff5651",
    "statusBarItem.errorBackground": "#1F1F1F",
    "statusBarItem.warningForeground": "#ffa82f",
    "statusBarItem.warningBackground": "#1F1F1F",
    "statusBar.debuggingForeground": "#ffa82f",
    "statusBar.debuggingBackground": "#1F1F1F",
    "statusBar.border": "#222",
    "badge.background": "#1F1F1F",
    "badge.foreground": "#0099DD",
    "activityBar.background": "#1F1F1F",
    "activityBar.foreground": "#33ccff",
    "activityBarBadge.background": "#0AE",
    "activityBarBadge.foreground": "#000",
    "editorBracketHighlight.foreground1": "#5caeef",
    "editorBracketHighlight.foreground2": "#dfb976",
    "editorBracketHighlight.foreground3": "#c172d9",
    "editorBracketHighlight.foreground4": "#4fb1bc",
    "editorBracketHighlight.foreground5": "#97c26c",
    "editorBracketHighlight.foreground6": "#abb2c0"
  },

  // Token Colors
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comment",
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "comment.line.double-slash",
          "punctuation.definition.comment"
        ],
        "settings": {
          "foreground": "#7F7F8F",
          "fontStyle": "italic"
        }
      },
      {
        "name": "String",
        "scope": ["string.quoted.other.lt-gt.include", "string"],
        "settings": {
          "foreground": "#ff5953"
        }
      },
      {
        "name": "Name",
        "scope": [
          "entity.name.type",
          "entity.name.namespace",
          "entity.name.type.class",
          "meta.jsx.children.js",
          "entity.other.attribute-name.class.css"
        ],
        "settings": {
          "foreground": "#1ed536"
        }
      },
      {
        "name": "Method",
        "scope": ["entity.name.function", "support.function"],
        "settings": {
          "foreground": "#dfbd25"
        }
      },
      {
        "name": "Keyword",
        "scope": ["keyword", "storage.type"],
        "settings": {
          "foreground": "#19a1fb",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Control",
        "scope": ["entity.name.function.preprocessor", "keyword.control"],
        "settings": {
          "foreground": "#fa59c4"
        }
      },
      {
        "name": "Variable",
        "scope": [
          "entity.name.variable.field.cs",
          "variable.other",
          "variable.other.constant",
          "variable.other.enummember",
          "meta.jsx.children.js",
          "variable.parameter.js"
        ],
        "settings": {
          "foreground": "#cdcdcd"
        }
      },
      {
        "name": "Local",
        "scope": ["variable.other.readwrite", "variable.other.property"],
        "settings": {
          "foreground": "#9bd3eb"
        }
      },
      {
        "name": "Parameter",
        "scope": [
          "variable.parameter",
          "constant.other.color.rgb-value.hex.css"
        ],
        "settings": {
          "foreground": "#d073f4"
        }
      },
      {
        "name": "Constant",
        "scope": [
          "constant",
          "constant.character.escape",
          "constant.numeric",
          "constant.other.placeholder",
          "constant.language.json",
          "entity.other.attribute-name.pseudo-class.css",
          "constant.language.null.js.jsx",
          "constant.language.boolean"
        ],
        "settings": {
          "foreground": "#ff8838"
        }
      },
      {
        "name": "HTML/JS String",
        "scope": [
          "punctuation.definition.string.begin.html",
          "punctuation.definition.string.end.html",
          "string.quoted.single.html",
          "string.quoted.double.html",
          "string.quoted.single.js",
          "string.quoted.double.js",
          "string.template.js"
        ],
        "settings": {
          "foreground": "#4ed360"
        }
      },
      {
        "name": "HTML/JS Tag/Name",
        "scope": [
          "entity.name.tag",
          "entity.name.tag.css",
          "support.variable.js",
          "support.class",
          "variable.language.this.js"
        ],
        "settings": {
          "foreground": "#f94c46"
        }
      },
      {
        "name": "JS/CSS Property",
        "scope": [
          "support.type.property-name.json",
          "support.type.property-name.css",
          "variable.css",
          "variable.argument.css",
          "entity.other.attribute-name",
          "support.variable.property",
          "variable.other.property.js",
          "variable.other.property.jsx"
        ],
        "settings": {
          "foreground": "#36c1e0",
          "fontStyle": "italic"
        }
      },
      {
        "name": "JS/CSS Value",
        "scope": [
          "support.constant.property-value.css",
          "support.constant.font-name.css",
          "storage.type.function.js",
          "storage.type.js"
        ],
        "settings": {
          "foreground": "#ff65cc"
        }
      },
      {
        "name": "CSS Attribute",
        "scope": ["entity.other.attribute-name.id.css", "keyword.other.unit"],
        "settings": {
          "foreground": "#eca41e"
        }
      }
    ]
  },

  // VIM Configuration
  "vim.smartRelativeLine": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 200,
  "vim.highlightedyank.color": "#DC6F08DD",
  "vim.highlightedyank.textColor": "#000",
  "vim.insertModeKeyBindings": [
    {
      "before": ["'", "'"],
      "after": ["<ESC>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["Esc"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // Git integration
  //   "git.enableSmartCommit": true,
  //   "git.confirmSync": false,
  "git.autofetch": true,

  // File Type Specific
  // C/C++ specific
  "C_Cpp.legacyCompilerArgsBehavior": true,
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.cppStandard": "c++23",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
    "bugprone-*",
    "cert-*",
    "performance-*",
    "misc-*",
    "portability-*",
    "clang-analyzer-*",
    "cppcoreguidelines-*"
  ],
  "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
    "cppcoreguidelines-avoid-magic-numbers",
    "misc-include-cleaner"
  ],

  // C#
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // Javascript
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,

  // Performance optimizations
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/build/**": true,
    "**/dist/**": true
  },
  "extensions.ignoreRecommendations": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "javascript.updateImportsOnFileMove.enabled": "always"
}
