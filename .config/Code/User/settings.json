{
    // General Settings
    "telemetry.telemetryLevel": "off",
    "extensions.autoUpdate": false,
    "explorer.confirmDragAndDrop": false,
    "editor.formatOnSave": true,
    "workbench.sideBar.location": "right",
    "window.titleBarStyle": "custom",
    // Appearance Settings
    "workbench.colorTheme": "Material Night Eighties",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "editor.fontFamily": "CaskaydiaMono Nerd Font",
    "editor.fontSize": 15.5,
    "editor.cursorSurroundingLines": 10,
    "terminal.integrated.fontFamily": "Hack Nerd Font",
    "terminal.integrated.fontSize": 14,
    // Custom Colors
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#181818",
        "breadcrumb.background": "#181818",
        "activityBar.background": "#181818",
        "sideBar.background": "#181818",
        "sideBarSectionHeader.background": "#222222",
        "editor.background": "#0A0A0A",
        "editorLineNumber.foreground": "#9A9A9A",
        "editorLineNumber.activeForeground": "#DADADA",
        "editor.lineHighlightBackground": "#121314",
        "editor.lineHighlightBorder": "#141516",
        "editor.selectionBackground": "#00c3ff1a",
        "editor.selectionHighlightBackground": "#00ccff22",
        "editorGroupHeader.tabsBackground": "#181818",
        "list.activeSelectionBackground": "#00ccff2a",
        "list.inactiveSelectionBackground": "#212122",
        "tab.activeBackground": "#00ccff24",
        "tab.inactiveBackground": "#181818",
        "statusBar.background": "#00ccff22",
        "statusBar.foreground": "#efefef",
        "statusBar.border": "#00ccff22",
        "badge.background": "#00ccff22",
        "activityBarBadge.background": "#00ccff22",
        "activityBarBadge.foreground": "#ffffff"
    },
    // Token Colors
    "editor.tokenColorCustomizations": {
        "comments": "#8d8d8d",
        "textMateRules": [
            {
                "scope": [
                    "string.quoted.double",
                    "punctuation.definition.string",
                    "string.quoted.other.lt-gt.include",
                    "keyword.control.c",
                    "storage.type.built-in.c",
                    "storage.type.built-in.primitive.c",
                ],
                "settings": {
                    "foreground": "#ff453f"
                }
            },
            {
                "scope": [
                    "variable.other.object.cs",
                    "entity.name.type.class",
                    "string.quoted.double.c",
                    "string.quoted.double.include.c",
                    "punctuation.definition.string.begin.c",
                    "punctuation.definition.string.end.c",
                    "string.quoted.other.lt-gt.include.c",
                ],
                "settings": {
                    "foreground": "#2dc42d"
                }
            },
            {
                "scope": [
                    "keyword",
                    "keyword.operator.expression",
                    "storage.modifier",
                    "storage.type",
                    "entity.name.function.c",
                ],
                "settings": {
                    "foreground": "#00b7ff"
                }
            },
            {
                "scope": [
                    "entity.name.function",
                ],
                "settings": {
                    "foreground": "#e2b820"
                }
            },
            {
                "scope": [
                    "keyword.control.directive",
                    "entity.name.variable.parameter",
                    "constant",
                ],
                "settings": {
                    "foreground": "#c758ff"
                }
            },
            {
                "scope": [
                    "entity.name.function.preprocessor",
                ],
                "settings": {
                    "foreground": "#ed6ac1"
                }
            },
            {
                "scope": [
                    "variable",
                    "variable.parameter",
                    "keyword.operator",
                    "entity.name.variable.local",
                    "support.type.property-name"
                ],
                "settings": {
                    "foreground": "#99daff"
                }
            },
            {
                "scope": [
                    "constant.numeric",
                    "constant.other.placeholder",
                    "constant.character.escape",
                ],
                "settings": {
                    "foreground": "#ff7c25"
                }
            },
            {
                "scope": [
                    "entity.other.inherited-class"
                ],
                "settings": {
                    "foreground": "#ff5f72"
                }
            }
        ]
    },
    // VIM Configuration
    "vim.smartRelativeLine": true,
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "'",
                "'"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "Esc"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "lineBreakInsert"
            ],
            "silent": true
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // Miscellaneous
    "workbench.settings.applyToAllProfiles": [],
    "editor.semanticTokenColorCustomizations": {},
    "editor.formatOnType": true,
    // C/C++ Settings
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "C_Cpp.legacyCompilerArgsBehavior": true,
    "C_Cpp.default.intelliSenseMode": "linux-clang-x64",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++23",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "extensions.ignoreRecommendations": true,
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
    "C_Cpp.codeAnalysis.clangTidy.path": "/usr/bin/clang-tidy",
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "bugprone-*",
        "cert-*",
        "performance-*",
        "misc-*",
        "portability-*",
        "clang-analyzer-*",
        "cppcoreguidelines-*"
    ],
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "cppcoreguidelines-avoid-magic-numbers",
        "misc-include-cleaner"
    ],
}