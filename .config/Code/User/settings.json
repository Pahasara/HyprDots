{
  // General Settings
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "explorer.confirmDragAndDrop": false,

  // Appearance Settings
  "window.titleBarStyle": "custom",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",

  // Editor Settings
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.fontSize": 15,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  "editor.cursorSurroundingLines": 10,
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File Type Specific
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // Terminal Settings
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.external.linuxExec": "/usr/bin/kitty",

  // Custom Colors
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1A1A1A",
    "titleBar.activeForeground": "#33CCFF",
    "breadcrumb.background": "#1A1A1A",
    "breadcrumb.foreground": "#10eb73",
    "sideBar.background": "#1A1A1A",
    "sideBar.foreground": "#DDDFDF",
    "sideBarSectionHeader.background": "#181818",
    "editor.background": "#1F1F1F",
    "editorLineNumber.foreground": "#88888F",
    "editorLineNumber.activeForeground": "#BFBFCB",
    "editor.lineHighlightBackground": "#262628",
    "editor.lineHighlightBorder": "#303032",
    "editor.selectionBackground": "#00c3ff1a",
    "editor.selectionHighlightBackground": "#0099DD42",
    "editorGroupHeader.tabsBackground": "#1A1A1A",
    "list.activeSelectionBackground": "#00ccff2a",
    "list.inactiveSelectionBackground": "#212122",
    "tab.activeBackground": "#102A42",
    "tab.inactiveBackground": "#1A1A1A",
    "statusBar.background": "#1A1A1A",
    "statusBar.foreground": "#3CF",
    "statusBar.debuggingForeground": "#ffa82f",
    "statusBar.debuggingBackground": "#1A1A1A",
    "statusBar.border": "#000",
    "badge.background": "#1A1A1A",
    "badge.foreground": "#0099DD",
    "activityBar.background": "#1A1A1A",
    "activityBar.foreground": "#33ccff",
    "activityBarBadge.background": "#0AE",
    "activityBarBadge.foreground": "#000"
  },

  // Token Colors
  "editor.tokenColorCustomizations": {
    "comments": "#6A6A7A",
    "textMateRules": [
      {
        "scope": [
          "string.quoted.other.lt-gt.include",
          "keyword.control.c",
          "storage.type.built-in.c",
          "storage.type.built-in.primitive.c",
          "string.template.js",
          "string.template.js.jsx",
          "string.quoted.double",
          "string",
          "punctuation.definition.string"
        ],
        "settings": {
          "foreground": "#ff5853"
        }
      },
      {
        "scope": [
          "entity.name.type.cs",
          "entity.name.type.class",
          "variable.other.object.cs",
          "string.quoted.double.c",
          "string.quoted.double.include.c",
          "punctuation.definition.string.begin.c",
          "punctuation.definition.string.end.c",
          "string.quoted.other.lt-gt.include.c",
          "punctuation.definition.string.begin.html",
          "punctuation.definition.string.end.html",
          "string.quoted.single.html",
          "string.quoted.double.html",
          "punctuation.definition.string.begin.js",
          "punctuation.definition.string.end.js",
          "string.quoted.single.js",
          "string.quoted.double.js"
        ],
        "settings": {
          "foreground": "#34c547"
        }
      },
      {
        "scope": [
          "entity.name.function",
          "support.type.property-name.json.comments"
        ],
        "settings": {
          "foreground": "#4acbef"
        }
      },
      {
        "scope": [
          "keyword",
          "keyword.control",
          "keyword.type",
          "storage.modifier",
          "keyword.operator.expression",
          "storage.type",
          "entity.name.function.c"
        ],
        "settings": {
          "foreground": "#6383ee"
        }
      },
      {
        "scope": [
          "entity.name.variable.parameter",
          "variable",
          "variable.parameter"
        ],
        "settings": {
          "foreground": "#c374dd"
        }
      },
      {
        "scope": [
          "entity.name.type.namespace",
          "entity.name.variable.local",
          "variable.other.readwrite"
        ],
        "settings": {
          "foreground": "#c9c9cc"
        }
      },
      {
        "scope": ["keyword.operator"],
        "settings": {
          "foreground": "#e7e7e7"
        }
      },
      {
        "scope": [
          "keyword.control.directive",
          "entity.other.attribute-name.js.jsx"
        ],
        "settings": {
          "foreground": "#c15bf5"
        }
      },
      {
        "scope": [],
        "settings": {
          "foreground": "#d7b126"
        }
      },
      {
        "scope": [
          "entity.name.function.preprocessor",
          "constant.character.escape"
        ],
        "settings": {
          "foreground": "#ff71d0"
        }
      },
      {
        "scope": ["constant", "constant.numeric", "constant.other.placeholder"],
        "settings": {
          "foreground": "#ff7c25"
        }
      },
      {
        "scope": ["entity.other.inherited-class"],
        "settings": {
          "foreground": "#ff5f72"
        }
      }
    ]
  },

  // VIM Configuration
  "vim.smartRelativeLine": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 200,
  "vim.highlightedyank.color": "#D05C08",
  "vim.highlightedyank.textColor": "#000",
  "vim.insertModeKeyBindings": [
    {
      "before": ["'", "'"],
      "after": ["<ESC>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["Esc"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // C/C++ specific
  "C_Cpp.legacyCompilerArgsBehavior": true,
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.cppStandard": "c++23",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "extensions.ignoreRecommendations": true,
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
    "bugprone-*",
    "cert-*",
    "performance-*",
    "misc-*",
    "portability-*",
    "clang-analyzer-*",
    "cppcoreguidelines-*"
  ],
  "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
    "cppcoreguidelines-avoid-magic-numbers",
    "misc-include-cleaner"
  ],
  "workbench.colorTheme": "Material Night Eighties",
  "workbench.activityBar.location": "hidden"
}
