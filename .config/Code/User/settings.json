{
  // General Settings
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "explorer.confirmDragAndDrop": false,
  "update.mode": "none",

  // Appearance
  "window.titleBarStyle": "custom",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
  "workbench.editor.empty.hint": "hidden",

  // Editor - Core Settings
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.lineNumbers": "relative",
  "editor.cursorSurroundingLines": 25,
  "editor.scrollBeyondLastLine": true,
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.tabCompletion": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 100,
  "editor.largeFileOptimizations": true,
  "editor.suggest.preview": true,

  // Emmet for React/TS
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // Terminal
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.external.linuxExec": "/usr/bin/kitty",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "block",

  // Theme Colors
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1E1E1F",
    "breadcrumb.background": "#161617",
    "breadcrumb.foreground": "#44cfff",
    "sideBar.background": "#1E1E1F",
    "sideBarSectionHeader.background": "#1E1E1F",
    "editor.background": "#161617",
    "editorLineNumber.foreground": "#88888F",
    "editorLineNumber.activeForeground": "#BFBFCB",
    "editor.lineHighlightBackground": "#222224",
    "editor.lineHighlightBorder": "#282830",
    "editor.selectionBackground": "#44aacc66",
    "editor.selectionHighlightBackground": "#3399cc66",
    "editorGroupHeader.tabsBackground": "#1E1E1F",
    "list.activeSelectionBackground": "#00ccff2a",
    "list.inactiveSelectionBackground": "#212122",
    "tab.activeBackground": "#13293A",
    "tab.activeBorderTop": "#0070DA",
    "tab.inactiveBackground": "#1E1E1F",
    "statusBar.background": "#1E1E1F",
    "statusBar.foreground": "#3CF",
    "statusBarItem.errorForeground": "#ff5651",
    "statusBarItem.errorBackground": "#1E1E1F",
    "statusBarItem.warningForeground": "#ffa82f",
    "statusBarItem.warningBackground": "#1E1E1F",
    "statusBar.debuggingForeground": "#ffa82f",
    "statusBar.debuggingBackground": "#1E1E1F",
    "statusBar.border": "#282828",
    "badge.background": "#1E1E1F",
    "badge.foreground": "#0099DD",
    "activityBar.background": "#1E1E1F",
    "activityBar.foreground": "#33ccff",
    "activityBarBadge.background": "#0AE",
    "activityBarBadge.foreground": "#000",
    "editorBracketHighlight.foreground1": "#5caeef",
    "editorBracketHighlight.foreground2": "#dfb976",
    "editorBracketHighlight.foreground3": "#c172d9",
    "editorBracketHighlight.foreground4": "#4fb1bc",
    "editorBracketHighlight.foreground5": "#97c26c",
    "editorBracketHighlight.foreground6": "#abb2c0"
  },

  // Syntax Colors - Optimized for TS/JS/React
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comments",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "foreground": "#7B7B8B",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Strings",
        "scope": [
          "string.quoted",
          "string.template",
          "string.quoted.single",
          "string.quoted.double"
        ],
        "settings": {
          "foreground": "#6bd178"
        }
      },
      {
        "name": "Keywords & Modifiers",
        "scope": [
          "keyword",
          "storage.type",
          "storage.modifier",
          "keyword.control",
          "keyword.operator.new",
          "keyword.control.export",
          "keyword.control.import",
          "keyword.control.from",
          "keyword.control.as",
          "storage.type.class",
          "storage.type.function",
          "storage.type.interface",
          "storage.type.type",
          "storage.type.enum",
          "storage.type.namespace"
        ],
        "settings": {
          "foreground": "#e29766",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Constants & Booleans",
        "scope": [
          "constant.language",
          "constant.language.boolean",
          "constant.language.null",
          "constant.language.undefined",
          "variable.language.this",
          "variable.language.super"
        ],
        "settings": {
          "foreground": "#ff77cf",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Numbers",
        "scope": ["constant.numeric"],
        "settings": {
          "foreground": "#ff47d1",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Types & Interfaces",
        "scope": [
          "entity.name.type",
          "entity.name.type.class",
          "entity.name.type.interface",
          "entity.name.type.module",
          "support.class",
          "support.type.builtin"
        ],
        "settings": {
          "foreground": "#00e0bef6"
        }
      },
      {
        "name": "Primitive Types",
        "scope": ["support.type.primitive"],
        "settings": {
          "foreground": "#d092ff"
        }
      },
      {
        "name": "Functions & Methods",
        "scope": [
          "entity.name.function",
          "support.function",
          "meta.function-call.generic"
        ],
        "settings": {
          "foreground": "#e0c878"
        }
      },
      {
        "name": "Variables & Parameters",
        "scope": [
          "variable",
          "variable.other",
          "variable.parameter",
          "variable.other.readwrite",
          "variable.other.constant",
          "variable.other.object",
          "variable.other.property"
        ],
        "settings": {
          "foreground": "#ccc"
        }
      },
      {
        "name": "Object Properties",
        "scope": [
          "variable.other.property",
          "support.variable.property",
          "meta.object-literal.key"
        ],
        "settings": {
          "foreground": "#4dc4de",
          "fontStyle": "italic"
        }
      },
      {
        "name": "JSX/HTML Tags",
        "scope": ["entity.name.tag", "support.class.component"],
        "settings": {
          "foreground": "#ff77cf"
        }
      },
      {
        "name": "JSX/HTML Attributes",
        "scope": ["entity.other.attribute-name"],
        "settings": {
          "foreground": "#4dc4de",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Operators",
        "scope": [
          "keyword.operator",
          "keyword.operator.logical",
          "keyword.operator.type"
        ],
        "settings": {
          "foreground": "#e1e1e1"
        }
      },
      {
        "name": "CSS Properties",
        "scope": [
          "support.type.property-name.css",
          "support.type.property-name.json"
        ],
        "settings": {
          "foreground": "#4dc4de",
          "fontStyle": "italic"
        }
      },
      {
        "name": "CSS Values & Units",
        "scope": [
          "support.constant.property-value.css",
          "keyword.other.unit.css",
          "constant.other.color"
        ],
        "settings": {
          "foreground": "#f483cf"
        }
      },
      {
        "name": "CSS Selectors",
        "scope": [
          "entity.other.attribute-name.id.css",
          "entity.other.attribute-name.class.css"
        ],
        "settings": {
          "foreground": "#e8a52a"
        }
      }
    ]
  },

  // TypeScript/JavaScript
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // CSS & TailwindCSS
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Performance
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/build": true,
    "**/dist": true,
    "**/.next": true,
    "**/.cache": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/.next/**": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": false
  },

  // File Nesting
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, .npmrc, .yarnrc",
    "tsconfig.json": "tsconfig.*.json",
    "*.ts": "${capture}.js, ${capture}.d.ts",
    "*.tsx": "${capture}.js, ${capture}.jsx",
    "*.js": "${capture}.js.map, ${capture}.min.js",
    ".env": ".env.*, .envrc",
    "tailwind.config.*": "postcss.config.*",
    "next.config.*": "next-env.d.ts"
  },

  // GitHub Copilot
  "github.copilot.enable": {
    "*": false,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true
  },

  // Neovim
  "vscode-neovim.compositeKeys": {
    "''": {
      "command": "vscode-neovim.escape"
    }
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Misc
  "extensions.ignoreRecommendations": true
}
