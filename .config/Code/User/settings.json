{
  // General Settings
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "explorer.confirmDragAndDrop": false,
  "update.mode": "none",
  //   "files.autoSave": "afterDelay",
  //   "files.autoSaveDelay": 1000,

  // Appearance Settings
  "window.titleBarStyle": "custom",
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Material Night Eighties",
  //   "editor.bracketPairColorization.enabled": true,
  //   "editor.guides.bracketPairs": true,

  // Editor Settings
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.fontSize": 15,
  "editor.tabSize": 4,
  "editor.wordWrap": "on",
  "editor.cursorSurroundingLines": 10,
  "editor.detectIndentation": false,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.linkedEditing": true,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 100,
  "editor.largeFileOptimizations": true,
  "editor.snippetSuggestions": "top",

  // Terminal Settings
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.external.linuxExec": "/usr/bin/kitty",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "block",

  // Custom Colors
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1A1A1A",
    "breadcrumb.background": "#181818",
    "breadcrumb.foreground": "#10eb73",
    "sideBar.background": "#1A1A1A",
    "sideBarSectionHeader.background": "#181818",
    "editor.background": "#1F1F1F",
    "editorLineNumber.foreground": "#88888F",
    "editorLineNumber.activeForeground": "#BFBFCB",
    "editor.lineHighlightBackground": "#262628",
    "editor.lineHighlightBorder": "#303032",
    "editor.selectionBackground": "#88bbff2a",
    "editor.selectionHighlightBackground": "#0099DD42",
    "editorGroupHeader.tabsBackground": "#1A1A1A",
    "list.activeSelectionBackground": "#00ccff2a",
    "list.inactiveSelectionBackground": "#212122",
    "tab.activeBackground": "#10252A",
    "tab.activeBorderTop": "#00BBDD94",
    "tab.inactiveBackground": "#1A1A1A",
    "statusBar.background": "#1A1A1A",
    "statusBar.foreground": "#3CF",
    "statusBarItem.errorForeground": "#ff5651",
    "statusBarItem.errorBackground": "#1A1A1A",
    "statusBarItem.warningForeground": "#ffa82f",
    "statusBarItem.warningBackground": "#1A1A1A",
    "statusBar.debuggingForeground": "#ffa82f",
    "statusBar.debuggingBackground": "#1A1A1A",
    "statusBar.border": "#000",
    "badge.background": "#1A1A1A",
    "badge.foreground": "#0099DD",
    "activityBar.background": "#1A1A1A",
    "activityBar.foreground": "#33ccff",
    "activityBarBadge.background": "#0AE",
    "activityBarBadge.foreground": "#000",
    "editorBracketHighlight.foreground1": "#5caeef",
    "editorBracketHighlight.foreground2": "#dfb976",
    "editorBracketHighlight.foreground3": "#c172d9",
    "editorBracketHighlight.foreground4": "#4fb1bc",
    "editorBracketHighlight.foreground5": "#97c26c",
    "editorBracketHighlight.foreground6": "#abb2c0"
  },

  // Token Colors
  "editor.tokenColorCustomizations": {
    "comments": "#7A7A8A",
    "textMateRules": [
      {
        "scope": [
          "string.quoted.other.lt-gt.include",
          "keyword.control.c",
          "storage.type.built-in.c",
          "storage.type.built-in.primitive.c",
          "string.cs",
          "string.quoted.double.cs",
          "punctuation.definition.string.cs",
          "punctuation.definition.string.begin.cs",
          "punctuation.definition.string.end.cs"
        ],
        "settings": {
          "foreground": "#ff4741"
        }
      },
      {
        "scope": [
          "entity.name.type.cs",
          "entity.name.type.class.cs",
          "variable.other.object.cs",
          "variable.other.object.property.cs",
          "string.quoted.double",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "string.quoted.double.include.c",
          "string.quoted.other.lt-gt.include.c",
          "meta.jsx.children.js"
        ],
        "settings": {
          "foreground": "#40c752"
        }
      },
      {
        "scope": [
          "punctuation.definition.string.begin.html",
          "punctuation.definition.string.end.html",
          "string.quoted.single.html",
          "string.quoted.double.html",
          "punctuation.definition.string.begin.js",
          "punctuation.definition.string.end.js",
          "string.quoted.single.js",
          "string.quoted.double.js"
        ],
        "settings": {
          "foreground": "#4ed360"
        }
      },
      {
        "scope": [
          "entity.name.function",
          "entity.name.function.c",
          "support.type.property-name.json"
        ],
        "settings": {
          "foreground": "#4cd8ff"
        }
      },
      {
        "scope": [
          "keyword",
          "keyword.control",
          "keyword.other",
          "keyword.operator.expression",
          "storage.modifier",
          "storage.type"
        ],
        "settings": {
          "foreground": "#d062ff"
        }
      },
      {
        "scope": [],
        "settings": {
          "foreground": "#92cae2"
        }
      },
      {
        "scope": [
          "variable",
          "entity.name.type.namespace.cs",
          "entity.name.variable.local.cs",
          "variable.other.readwrite.cs",
          "meta.object-literal.key.js",
          "variable.other.object.js"
        ],
        "settings": {
          "foreground": "#d0d0d1"
        }
      },
      {
        "scope": ["keyword.operator"],
        "settings": {
          "foreground": "#ff7af2"
        }
      },
      {
        "scope": [
          "entity.name.function.preprocessor",
          "constant.character.escape",
          "variable.parameter.js",
          "variable.other.property.js"
        ],
        "settings": {
          "foreground": "#ff71d0"
        }
      },
      {
        "scope": ["constant", "constant.numeric", "constant.other.placeholder"],
        "settings": {
          "foreground": "#ff7c25"
        }
      },
      {
        "scope": ["entity.other.inherited-class"],
        "settings": {
          "foreground": "#ff5f72"
        }
      }
    ]
  },

  // VIM Configuration
  "vim.smartRelativeLine": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 200,
  "vim.highlightedyank.color": "#D05C08",
  "vim.highlightedyank.textColor": "#000",
  "vim.insertModeKeyBindings": [
    {
      "before": ["'", "'"],
      "after": ["<ESC>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["Esc"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // Git integration
  //   "git.enableSmartCommit": true,
  //   "git.confirmSync": false,
  "git.autofetch": true,

  // File Type Specific
  // C/C++ specific
  "C_Cpp.legacyCompilerArgsBehavior": true,
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.cppStandard": "c++23",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.codeAnalysis.clangTidy.useBuildPath": true,
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
    "bugprone-*",
    "cert-*",
    "performance-*",
    "misc-*",
    "portability-*",
    "clang-analyzer-*",
    "cppcoreguidelines-*"
  ],
  "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
    "cppcoreguidelines-avoid-magic-numbers",
    "misc-include-cleaner"
  ],

  // C#
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },

  // Javascript
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,

  // Performance optimizations
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/build/**": true,
    "**/dist/**": true
  },
  "extensions.ignoreRecommendations": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "javascript.updateImportsOnFileMove.enabled": "always"
}
