# github.com/pahasara/HyprDots

[options]
# Suppress built-in key bindings, and specify them explicitly in this config file.
suppress_default_binds = true

[binds]
q = quit

# Image navigation
<Shift+K> = prev
<Shift+J> = next
k = pan 0, 30
j = pan 0, -30
h = pan -30, 0
l = pan 30, 0
gg = goto 1
<Shift+G> = goto -1

# Zooming
<Shift+plus> = zoom 2
i = zoom 2
<minus> = zoom -2
o = zoom -2

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other commands
c = center
s = scaling next
f = fullscreen
<Shift+S> = upscaling next
a = zoom actual
r = reset
