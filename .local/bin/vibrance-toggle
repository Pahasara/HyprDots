#!/bin/bash

CONFIG_FILE="$HOME/.config/hypr/general.conf"

# Check if the line is currently uncommented (active)
if grep -q "^[[:space:]]*screen_shader = vibrance.frag" "$CONFIG_FILE"; then
    # It's active, comment it out
    sed -i 's|^\([[:space:]]*\)\(screen_shader = vibrance.frag.*\)$|\1# \2|' "$CONFIG_FILE"
else
    # It's commented, uncomment it
    sed -i 's|^\([[:space:]]*\)# \(screen_shader = vibrance.frag.*\)$|\1\2|' "$CONFIG_FILE"
fi

