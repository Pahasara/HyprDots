{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "extensions.autoUpdate": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 13.5,
  "terminal.integrated.fontFamily": "Hack Nerd Font",
  "terminal.integrated.fontSize": 13,
  "cmake.showOptionsMovedNotification": false,
  "terminal.integrated.autoReplies": {},
  "workbench.settings.applyToAllProfiles": [],
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Cygwin": {
      "path": "C:\\cygwin64\\bin\\bash.exe",
      "args": [
        "--login"
      ]
    }
  },
  "workbench.startupEditor": "none",
  "redhat.telemetry.enabled": false,
  "json.schemas": [],
  "window.titleBarStyle": "custom",
  "workbench.colorTheme": "Material Night Eighties",
  "editor.semanticTokenColorCustomizations": {},
  /**********************************************************/
  //          WORKBENCH CUSTOMIZATION
  //"editor.renderLineHighlight": "all",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#151515",
    "activityBar.background": "#151515",
    "sideBar.background": "#151515",
    "sideBarSectionHeader.background": "#252424",
    "editor.background": "#101010",
    "editorLineNumber.foreground": "#a7a7a7",
    "editorLineNumber.activeForeground": "#f5f5f5",
    "editor.lineHighlightBackground": "#191919",
    "editor.lineHighlightBorder": "#1e1e1ebb",
    "editor.selectionBackground": "#01fa0d3f",
    "editor.selectionHighlightBackground": "#01fa0d5f",
    "tab.activeBackground": "#0e0e0e",
    "tab.inactiveBackground": "#1c1c1cbf",
    "statusBar.background": "#0a7623",
    "statusBar.border": "#118133",
    "badge.background": "#1b7d0e",
    "activityBarBadge.background": "#1d900d"
  },
  /**********************************************************/
  //                     VIM CONFIG
  //"// To improve performance",
  "vim.smartRelativeLine": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "d"
      ],
      "after": [
        "d",
        "d"
      ]
    },
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "lineBreakInsert"
      ],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // To improve performance",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  /**********************************************************/
  //          EDITOR CUSTOMIZATION
  "editor.tokenColorCustomizations": {
    "comments": "#7d7d7d",
    "textMateRules": [
      /*****************************************/
      //                DEFAULT
      {
        "scope": [
          "string.quoted.double"
        ],
        "settings": {
          "foreground": "#56c96fd5"
        }
      },
      {
        "scope": [
          "punctuation.definition.string"
        ],
        "settings": {
          "foreground": "#6eff8ddb"
        }
      },
      {
        "scope": [
          "constant.numeric.decimal"
        ],
        "settings": {
          "foreground": "#ff6969",
        }
      },
      {
        "scope": [
          "entity.name.function"
        ],
        "settings": {
          "foreground": "#eeee91e3",
        }
      },
      {
        "scope": [
          "keyword.other"
        ],
        "settings": {
          "foreground": "#ffa25af1",
        }
      },
      {
        "scope": [
          "keyword.control"
        ],
        "settings": {
          "foreground": "#ffa25af1",
        }
      },
      {
        "scope": [
          "variable"
        ],
        "settings": {
          "foreground": "#ffa25af1"
        }
      },
      {
        "scope": [
          "storage.modifier"
        ],
        "settings": {
          "foreground": "#ffa25af1"
        }
      },
      {
        "scope": [
          "storage.type"
        ],
        "settings": {
          "foreground": "#ffa25af1"
        }
      },
      {
        "scope": [
          "variable.parameter"
        ],
        "settings": {
          "foreground": "#45a8ff",
        }
      },
      {
        "scope": [
          "variable.other"
        ],
        "settings": {
          "foreground": "#dbdbdbf4",
        }
      },
      {
        "scope": [
          "storage.modifier.import"
        ],
        "settings": {
          "foreground": "#dbdbdbf4"
        }
      },
      {
        "scope": [
          "storage.modifier.package"
        ],
        "settings": {
          "foreground": "#dbdbdbf4"
        }
      },
      {
        "scope": [
          "entity.name.type.class"
        ],
        "settings": {
          "foreground": "#dbdbdbf4",
        }
      },
      {
        "scope": [
          "meta.class"
        ],
        "settings": {
          "foreground": "#dbdbdbf4"
        }
      },
      {
        "scope": [
          "variable.other.object.property"
        ],
        "settings": {
          "foreground": "#dbdbdbf4",
        }
      },
      {
        "scope": [
          "keyword.operator"
        ],
        "settings": {
          "foreground": "#e5e5e5f1"
        }
      },
      {
        "scope": [
          "variable.other.definition"
        ],
        "settings": {
          "foreground": "#a4e5fff1",
        }
      },
      {
        "scope": [
          "entity.other.inherited-class"
        ],
        "settings": {
          "foreground": "#ff5f72"
        }
      },
      {
        "scope": [
          "punctuation.definition.annotation"
        ],
        "settings": {
          "foreground": "#9d8cff"
        }
      },
      {
        "scope": [
          "storage.type.annotation"
        ],
        "settings": {
          "foreground": "#9d8cff"
        }
      },
      {
        "scope": [
          "support.type.property-name"
        ],
        "settings": {
          "foreground": "#81eef8ee"
        }
      },
      {
        "scope": [
          "constant.character.escape"
        ],
        "settings": {
          "foreground": "#ffa256",
        }
      },
      /*****************************************/
      //               Java 
      {
        "scope": [
          "storage.type.primitive"
        ],
        "settings": {
          "foreground": "#ffa661"
        }
      },
      /*****************************************/
      //                  C
      {
        "scope": [
          "storage.type.built-in.primitive"
        ],
        "settings": {
          "foreground": "#6fe569c4",
        }
      },
      {
        "scope": [
          "keyword.control.directive.include"
        ],
        "settings": {
          "foreground": "#34ab40cc",
        }
      },
      {
        "scope": [
          "string.quoted.other.lt-gt.include"
        ],
        "settings": {
          "foreground": "#34ab40cc",
        }
      },
      {
        "scope": [
          "constant.other.placeholder"
        ],
        "settings": {
          "foreground": "#fbff84e7",
        }
      },
      /*****************************************/
    ],
  },
  "cSpell.userWords": [
    "Cascadia",
    "colour",
    "Fira",
    "gameplay"
  ],
  "explorer.confirmDragAndDrop": false,
  "editor.formatOnSave": true,
}
